<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:fitsSystemWindows="true"
        android:background="@drawable/side_nav_bar"
        android:elevation="2dp"
        >
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:onClick="onReturnClick"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:textSize="12sp"
                android:src="@mipmap/left"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_gravity="right">
            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_fillet_white_5"
                android:textColor="@color/black"
                android:text="Send"
                android:onClick="onSendClick"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/writedynamic_down_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="20dp"
            android:gravity="top"
            android:background="@null"
            android:hint="分享新鲜事..."
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="10dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#eee"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:onClick="onAddPhotoClick"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_menu_camera_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eee"
                    android:textColor="#777"
                    android:text="添加照片"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/writedynamic_photocentent_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                >

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>